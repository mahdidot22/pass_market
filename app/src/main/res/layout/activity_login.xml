<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Splash"
    tools:context="com.mahdid.o.taha.onlineshoppingsystem.Login">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Login_form"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loginshape"
        android:clickable="false"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/Login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:background="@color/Splash"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/Login_Err"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:clickable="false"
            android:text=""
            android:textColor="#fff"
            android:textSize="13sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:hint="Username"
            android:padding="15dp" />


        <EditText
            android:id="@+id/login_ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"

            />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="15dp"
            android:text="Login"
            android:textColor="#fff" />


    </LinearLayout>

    <Button
        android:id="@+id/login_sign_up_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Have not an account yet! Sign up Page!"
        android:textColor="#FFF"
        android:textSize="14sp" />

</RelativeLayout>