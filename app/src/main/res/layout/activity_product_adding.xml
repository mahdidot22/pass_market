<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productAdding">

    <TextView
        android:id="@+id/add_to_products_Err"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#fff"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/add_to_products"

        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#fff"
        android:layout_below="@id/add_to_products_Err">

            <ImageView
                android:id="@+id/id_add_image_product"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/id_add_image"
                android:background="@color/colorAccent"
                />


        <EditText
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:hint="name"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/pprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center"
            android:hint="price"
            android:inputType="number"
            android:padding="10dp"
            />



        <EditText
            android:id="@+id/pdescription"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#fff"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="6"
            android:hint="description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false" />



        <ImageView
            android:background="@color/colorAccent"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_cart"
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center" />


    </LinearLayout>

    <Button
        android:id="@+id/add_to_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="Add Product"
        android:textColor="#fff" />
</RelativeLayout>